{
  "name": "xaml-python-intellisense",
  "displayName": "XAML Python IntelliSense",
  "description": "Provides IntelliSense/autocomplete for WPF XAML elements in Python code (pyRevit/IronPython)",
  "version": "0.3.0",
  "publisher": "dolanklock",
  "repository": {
    "type": "git",
    "url": "https://github.com/dolanklock/xaml-python-intellisense"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "xaml",
    "python",
    "wpf",
    "pyrevit",
    "ironpython",
    "intellisense",
    "autocomplete"
  ],
  "activationEvents": [
    "onLanguage:python",
    "workspaceContains:**/*.xaml"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "xaml-intellisense.generateStubs",
        "title": "XAML: Generate Python Stubs"
      },
      {
        "command": "xaml-intellisense.generateStubsForFile",
        "title": "XAML: Generate Stub for Current File"
      },
      {
        "command": "xaml-intellisense.configureSettings",
        "title": "XAML: Configure VS Code Settings"
      }
    ],
    "configuration": {
      "title": "XAML Python IntelliSense",
      "properties": {
        "xamlPythonIntellisense.autoGenerate": {
          "type": "boolean",
          "default": true,
          "description": "Automatically generate stubs when XAML files change"
        },
        "xamlPythonIntellisense.stubFilePrefix": {
          "type": "string",
          "default": "_",
          "description": "Prefix for generated stub files"
        },
        "xamlPythonIntellisense.stubFileSuffix": {
          "type": "string",
          "default": "_xaml",
          "description": "Suffix for generated stub files (before .pyi extension)"
        },
        "xamlPythonIntellisense.autoInjectAnnotations": {
          "type": "boolean",
          "default": true,
          "description": "Automatically inject TYPE_CHECKING imports and class annotations into Python files"
        },
        "xamlPythonIntellisense.stubsFolder": {
          "type": "string",
          "default": "typings",
          "description": "Folder name for generated stub files (relative to workspace root)"
        },
        "xamlPythonIntellisense.autoConfigureSettings": {
          "type": "boolean",
          "default": true,
          "description": "Automatically configure VS Code Python settings for stub path"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package-ext",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts",
    "package-ext": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "package": "npm run package-ext && vsce package"
  },
  "devDependencies": {
    "@types/node": "^18.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vscode/vsce": "^2.0.0",
    "esbuild": "^0.27.2",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "xml2js": "^0.6.2"
  }
}
